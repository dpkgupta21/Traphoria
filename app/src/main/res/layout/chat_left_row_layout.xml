<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/back_btn"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:src="@drawable/avtar_icon"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />

        <RelativeLayout
            android:id="@+id/msg_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@id/img_user_image">


            <com.app.traphoria.customViews.MyTextView16
                android:id="@+id/msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:background="@drawable/left_chat_white_bg"
                android:padding="@dimen/margin_15dp"
                android:text="Hi Md,How can I help you?"
                android:textColor="@color/black"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/left_chet_corner" />

            <com.app.traphoria.customViews.MyTextView10
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg_tv"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:textSize="@dimen/text_size_10sp"
                android:gravity="left"
                android:text="15 Sep"
                android:textColor="@color/dark_grey"
                 />

            <com.app.traphoria.customViews.MyTextView10
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_10sp"
                android:layout_below="@+id/msg_tv"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/date"
                android:text=""
                android:textColor="@color/dark_grey"
                />

            <com.app.traphoria.customViews.MyTextView10
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/msg_tv"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/view"
                android:gravity="left"
                android:text=""
                android:textSize="@dimen/text_size_10sp"
                android:textColor="@color/dark_grey"
                 />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>