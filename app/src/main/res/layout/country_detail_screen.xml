<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.DestinationDetailScreen">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/image_background_grey"
            android:scaleType="fitCenter"
            android:src="@drawable/login_bg" />


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15dp"
            android:src="@drawable/back_btn" />

        <ImageView
            android:id="@+id/info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_15dp"
            android:src="@drawable/info_icon" />

        <com.app.traphoria.customViews.MyTextView40
            android:id="@+id/place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_btn"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:minLines="1"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp"
            android:text="India"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_40sp" />


        <LinearLayout
            android:id="@+id/linear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_name"
            android:layout_marginTop="@dimen/margin_10dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_20dp"
            android:paddingRight="@dimen/margin_20dp">

            <com.app.traphoria.customViews.MyTextView18
                android:id="@+id/top_dest_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:background="@drawable/transparent_blue_button_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:paddingTop="@dimen/margin_10dp"
                android:text="@string/top_dest"
                android:textColor="@color/white" />

            <com.app.traphoria.customViews.MyTextView18
                android:id="@+id/culture_dest_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/transparent_blue_button_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:paddingTop="@dimen/margin_10dp"
                android:text="@string/culture_dest"
                android:textColor="@color/white" />

            <com.app.traphoria.customViews.MyTextView18
                android:id="@+id/festival_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/transparent_blue_button_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:paddingTop="@dimen/margin_10dp"
                android:text="@string/festival_events"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>