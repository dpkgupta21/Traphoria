<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".search.FestivalEventsScreen">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/img_top_destination"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/relative_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_event_title"
            android:layout_centerHorizontal="true">

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/txt_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deepak"
                android:textColor="@color/black" />

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/txt_to_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txt_start_date"
                android:text="to"
                android:textColor="@color/black" />

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/txt_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/txt_to_lbl"
                android:text="Deepak"
                android:textColor="@color/black" />
        </RelativeLayout>

        <com.app.traphoria.customViews.MyTextView20
            android:id="@+id/txt_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Deepak"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </RelativeLayout>

    <WebView
        android:id="@+id/webview_top_destination"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
