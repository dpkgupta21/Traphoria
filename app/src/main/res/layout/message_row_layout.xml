<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/status_pin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:paddingLeft="@dimen/margin_20dp"
            android:src="@drawable/avtar_icon"
            app:civ_border_color="@color/grey"
            app:civ_border_width="1dp" />

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_10dp"
            android:src="@drawable/more_icon" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_30dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_toRightOf="@+id/status_pin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_20dp">

            <com.app.traphoria.customViews.MyTextView18
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Md. Alnasir"
                android:textColor="@color/purple" />

            <com.app.traphoria.customViews.MyTextView14
                android:id="@+id/message_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."
                android:textColor="@color/black" />

            <com.app.traphoria.customViews.MyTextView14
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_detail"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:text="15 June 2015"
                android:textColor="@color/dark_grey" />

            <!--<com.app.traphoria.customViews.MyTextView14-->
                <!--android:id="@+id/view"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/message_detail"-->
                <!--android:layout_marginLeft="@dimen/margin_5dp"-->
                <!--android:layout_marginTop="@dimen/margin_5dp"-->
                <!--android:layout_toRightOf="@+id/date"-->
                <!--android:text="|"-->
                <!--android:textColor="@color/dark_grey" />-->

            <!--<com.app.traphoria.customViews.MyTextView14-->
                <!--android:id="@+id/time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/message_detail"-->
                <!--android:layout_marginLeft="@dimen/margin_5dp"-->
                <!--android:layout_marginTop="@dimen/margin_5dp"-->
                <!--android:layout_toRightOf="@+id/view"-->
                <!--android:gravity="left"-->
                <!--android:text="05:00 PM"-->
                <!--android:textColor="@color/dark_grey" />-->

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/grey" />
</android.support.v7.widget.CardView>