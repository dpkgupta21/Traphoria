<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/image_full_shadow_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--<FrameLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content">-->

        <!--<ImageView-->
        <!--android:id="@+id/thumbnail"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/image_background_grey"-->
        <!--android:scaleType="fitCenter"-->
        <!--android:src="@drawable/login_bg" />-->

        <!--<View-->
        <!--android:id="@+id/overlay"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="#66000000"-->
        <!--android:layout_height="match_parent"/>-->
        <!--</FrameLayout>-->

        <com.app.traphoria.customViews.MyTextView18
            android:id="@+id/type_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/black_transparent_circle"
            android:gravity="center"
            android:text="@string/P"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/edit_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/edit_icon" />

        <RelativeLayout
            android:id="@+id/passport_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/edit_btn"
            android:layout_toRightOf="@+id/type_tv"
            android:visibility="visible">

            <com.app.traphoria.customViews.MyTextView18
                android:id="@+id/txt_country_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5dp"
                android:paddingTop="@dimen/margin_5dp"
                android:singleLine="true"
                android:text="United States of America"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/txt_passport_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_country_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="Diplomatic Passports"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/txt_passport_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_passport_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Passport No: 000 000 000 000"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/txt_expires_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_passport_no"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Expires On: 28 Jan 2016"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView12
                android:id="@+id/explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_expires_date"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_5dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:background="@drawable/white_button_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_10dp"
                android:paddingLeft="@dimen/margin_20dp"
                android:paddingRight="@dimen/margin_20dp"
                android:paddingTop="@dimen/margin_10dp"
                android:singleLine="true"
                android:text="@string/visa_free_dest"
                android:textColor="@color/white"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/faded_white" />
</android.support.v7.widget.CardView>