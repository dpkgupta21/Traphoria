<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.traphoria.passportvisa.VisaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_ll"
        android:layout_marginBottom="@dimen/margin_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/visa_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:orientation="vertical">

                <com.app.traphoria.customViews.MyTextView16
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:padding="@dimen/margin_10dp"
                    android:text="@string/select_country"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_background"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp">

                    <com.app.traphoria.customViews.MyTextView18
                        android:id="@+id/visa_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_background"
                        android:drawableRight="@drawable/down_btn"
                        android:hint="@string/select"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/dark_grey" />
                </RelativeLayout>

                <com.app.traphoria.customViews.MyTextView16
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:padding="@dimen/margin_10dp"
                    android:text="@string/visa_type"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_background"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp">

                    <com.app.traphoria.customViews.MyTextView18
                        android:id="@+id/visa_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_background"
                        android:drawableRight="@drawable/down_btn"
                        android:hint="@string/select"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/dark_grey" />
                </RelativeLayout>

                <com.app.traphoria.customViews.MyTextView16
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:padding="@dimen/margin_10dp"
                    android:text="@string/entry_type"
                    android:textColor="@color/black" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grey_background"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp">

                    <com.app.traphoria.customViews.MyTextView18
                        android:id="@+id/visa_entry_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grey_background"
                        android:drawableRight="@drawable/down_btn"
                        android:hint="@string/select"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/dark_grey" />
                </RelativeLayout>


                <com.app.traphoria.customViews.MyTextView16
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:padding="@dimen/margin_10dp"
                    android:text="@string/expire_on"
                    android:textColor="@color/black" />

                <com.app.traphoria.customViews.MyTextView18
                    android:id="@+id/visa_expire_on_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/grey_background"
                    android:drawableRight="@drawable/calender_btn"
                    android:gravity="center_vertical"
                    android:hint="@string/dd_mm_yyyy"
                    android:paddingBottom="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingTop="@dimen/margin_10dp"
                    android:textColor="@color/text_color_selector" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/purple"
        android:weightSum="2.1">

        <com.app.traphoria.customViews.MyTextView18
            android:id="@+id/save_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:text="@string/save"
            android:textColor="@color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/dark_purple" />

        <com.app.traphoria.customViews.MyTextView18
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:text="@string/add_more"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
