<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/image_background_grey"
                android:scaleType="fitCenter"
                android:src="@drawable/login_bg" />

        </FrameLayout>

        <com.app.traphoria.customViews.MyTextView14
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/event_tv"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:singleLine="true"
            android:text="3rd November 2015 to 9th April,2016"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <com.app.traphoria.customViews.MyTextView18
            android:id="@+id/event_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:singleLine="true"
            android:text="Global Village 2015-2016"
            android:textColor="@color/white"
            android:textStyle="normal" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:background="@color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>