<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bg" />


        <com.app.traphoria.customViews.MyTextView20
            android:id="@+id/type_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/black_transparent_circle"
            android:gravity="center"
            android:text="@string/V"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <!--<ImageView-->
        <!--android:id="@+id/edit_btn"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_gravity="right"-->
        <!--android:src="@drawable/edit_icon" />-->

        <RelativeLayout
            android:id="@+id/visa_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/type_tv"
            android:visibility="visible">

            <com.app.traphoria.customViews.MyTextView20
                android:id="@+id/txt_country_name_visa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5dp"
                android:paddingTop="@dimen/margin_5dp"
                android:singleLine="true"
                android:text="United Kingdom"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView16
                android:id="@+id/txt_visa_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_country_name_visa"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="Long Stay Visa"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView16
                android:id="@+id/txt_visa_entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_visa_type"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Double Entry (1 left)"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <com.app.traphoria.customViews.MyTextView16
                android:id="@+id/txt_visa_expires_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_visa_entry"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Expires On: 28 Jan 2016"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <!--<com.app.traphoria.customViews.MyTextView12-->
            <!--android:id="@+id/txt_explore_visa"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/txt_visa_expires_date"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="@dimen/margin_10dp"-->
            <!--android:background="@drawable/white_button_selector"-->
            <!--android:gravity="center"-->
            <!--android:paddingBottom="@dimen/margin_10dp"-->
            <!--android:paddingLeft="@dimen/margin_20dp"-->
            <!--android:paddingRight="@dimen/margin_20dp"-->
            <!--android:paddingTop="@dimen/margin_10dp"-->
            <!--android:singleLine="true"-->
            <!--android:text="@string/explore_free"-->
            <!--android:textColor="@color/white"-->
            <!--android:textStyle="normal" />-->
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/faded_white" />
</android.support.v7.widget.CardView>