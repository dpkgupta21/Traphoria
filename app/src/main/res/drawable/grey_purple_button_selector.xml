<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dip" android:color="@color/dark_purple" />

            <gradient android:angle="90" android:endColor="@color/dark_purple" android:startColor="@color/dark_purple" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dip" android:color="@color/dark_purple" />

            <solid android:color="@color/dark_purple" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />

            <stroke android:width="1dip" android:color="@color/grey" />

            <gradient android:angle="90" android:endColor="@color/grey" android:startColor="@color/grey" />
        </shape>
    </item>
</selector>